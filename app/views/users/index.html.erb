<head>
  <link rel="shortcut icon" href="img/favicon.png">
  <title>SimpliQ - Bootstrap 4 Admin Template</title>

  <!-- Icons -->
  <link href="/assets/tables/flag-icon.min.css" rel="stylesheet">
  <link href="/assets/tables/font-awesome.min.css" rel="stylesheet">
  <link href="/assets/tables/simple-line-icons.min.css" rel="stylesheet">

  <!-- Main styles for this application -->
  <link href="assets/tables/style.css" rel="stylesheet">

  <!-- Styles required by this views -->
</head>

<h1>Users</h1>

<div class="card">
  <div class="card-header">
    <i class="fa fa-align-justify"></i> Users
  </div>
  <div class="card-body">
    <table class="table table-responsive-sm">
      <thead>
      <tr>
        <th>Name</th>
        <th>Admin</th>
        <th>Last Invoice</th>
        <th>Invoices</th>
        <th>Actions</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= check_box_tag 'admin', 'accepted', user.admin, disabled: true %></td>
          <td><%=link_to user.invoices.last.id.to_s , user.invoices.last if user.invoices.exists? %></td>
          <td><%= user.invoices.count %></td>
          <td><button><%= link_to 'Edit', edit_user_path(user) %></button>
            <button><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'layouts/flash_message' %>

<br>
<button><%= link_to 'New User', new_user_path %></button>
<script src="/assets/tables/jquery.min.js"></script>
<script src="/assets/tables/popper.min.js"></script>
<script src="/assets/tables/bootstrap.min.js"></script>
<script src="/assets/tables/pace.min.js"></script>

<!-- Plugins and scripts required by all views -->
<script src="/assets/tables/Chart.min.js"></script>


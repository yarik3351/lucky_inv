<%= render 'layouts/flash_message' %>
<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Admin</th>
    <th>Last Invoice</th>
    <th>Invoices</th>
    <th>Actions</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= check_box_tag 'admin', 'accepted', user.admin, disabled: true %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

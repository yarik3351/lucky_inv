<%= render 'layouts/flash_message' %>
<h1>Вход</h1>

<%= form_with(url: "/login", method: :post, local: true) do |form| %>

  <div class="field">
    <%= form.label :email%>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit 'Вход' %>
  </div>
<% end %>


